---
const { title, label } = Astro.props;
---

<div class="bg-amber-100 rounded-xl p-6 flex flex-col items-center text-center">
  <div class="bg-amber-200 rounded-full p-3 mb-4">
    <slot />
  </div>
  <h3 class="font-bold mb-2">{title}</h3>
  <p class="text-sm text-muted-foreground">
    {label}
  </p>
</div>
