---
const { colors: borderColor, pathNumber, title, description } = Astro.props;
---

<div class=`rounded-lg shadow-md bg-white border-t-4 ${borderColor}`>
  <div class="flex flex-col space-y-1.5 p-6 content-between">
    <div class="flex flex-row items-center gap-2">
      <slot name="icon" />
      <h4
        class="text-xl font-semibold text-gray-500 leading-none tracking-tight"
      >
        Sendero {pathNumber}
      </h4>
    </div>
    <h3 class="text-2xl font-semibold leading-none tracking-tight">
      {title}
    </h3>

    <p class="text-sm text-muted-foreground">
      {description}
    </p>

    <slot name="list" />
    <slot name="link" />
  </div>
</div>
